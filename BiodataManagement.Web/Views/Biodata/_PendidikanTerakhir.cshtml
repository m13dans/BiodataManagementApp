@model List<PendidikanTerakhir>

<div class="table table-responsive">
    <table id="pendidikanTerakhir" class="table text-center align-middle">
        <thead class="">
            <tr class="">
                <th class="col-2 align-content-center">Jenjang Pendidikan Terakhir</th>
                <th class="col-3 align-content-center">
                    Nama Institusi Akademik
                </th>
                <th class="col-2 align-content-center">
                    Jurusan
                </th>
                <th class="col-2 align-content-center">
                    Tahun Lulus
                </th>
                <th class="col-1 align-content-center">
                    IPK
                </th>
                <th class="col-2 align-content-center">
                    Edit Data
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any(x => x is not null))
            {
                foreach (var pendidikanTerakhir in Model)
                {
                    <tr>
                        <td>@pendidikanTerakhir.JenjangPendidikanTerakhir</td>
                        <td>@pendidikanTerakhir.NamaInstitusiAkademik</td>
                        <td>@pendidikanTerakhir.Jurusan</td>
                        <td>@pendidikanTerakhir.TahunLulus</td>
                        <td>@pendidikanTerakhir.IPK</td>
                        <td>
                            <div>
                                <a asp-controller="PendidikanTerakhir" asp-action="Update"
                                   asp-route-biodataId="@pendidikanTerakhir.BiodataId" asp-route-id="@pendidikanTerakhir.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
