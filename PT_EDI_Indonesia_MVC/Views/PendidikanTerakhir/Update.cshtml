@model List<PendidikanTerakhir>

<h2>Pendidikan Terakhir</h2>

@foreach (var pendidikan in Model)
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="PendidikanTerakhir" asp-action="Creat" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group my-2">
                    <label asp-for="@pendidikan.JenjangPendidikanTerakhir" class="control-label"></label>
                    <input asp-for="@pendidikan.JenjangPendidikanTerakhir" class="form-control" />
                    <span asp-validation-for="@pendidikan.JenjangPendidikanTerakhir" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="@pendidikan.NamaInstitusiAkademik" class="control-label"></label>
                    <input asp-for="@pendidikan.NamaInstitusiAkademik" class="form-control" />
                    <span asp-validation-for="@pendidikan.NamaInstitusiAkademik" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="@pendidikan.Jurusan" class="control-label"></label>
                    <input asp-for="@pendidikan.Jurusan" class="form-control" />
                    <span asp-validation-for="@pendidikan.Jurusan" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="@pendidikan.TahunLulus" class="control-label"></label>
                    <input asp-for="@pendidikan.TahunLulus" class="form-control" />
                    <span asp-validation-for="@pendidikan.TahunLulus" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
